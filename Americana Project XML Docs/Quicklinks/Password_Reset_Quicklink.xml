<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE sailpoint PUBLIC "sailpoint.dtd" "sailpoint.dtd">
<sailpoint>
<QuickLink action="workflow" category="password" messageKey="HelpDeskPassword" name="Password_Reset_Quicklink">
  <Attributes>
    <Map>
      <entry key="httpSession">
        <value>
          <Script>
            <Source>   
              import javax.faces.context.FacesContext;  
              import javax.servlet.http.HttpSession;  
              FacesContext fc = FacesContext.getCurrentInstance();  
              HttpSession session = fc.getExternalContext().getSession(true);  
              return session;  
            </Source>
          </Script>
        </value>
      </entry>
      <entry key="requester">
        <value>
          <Script>
            <Source> 
              return currentUser.getName();          
            </Source>
          </Script>
        </value>
      </entry>
      <entry key="workflowName" value="BAB Custom Password Reset" />
    </Map>
  </Attributes>
  <Description>QuickLink to View Service Account in IIQ table</Description>
  <QuickLinkOptions allowSelf="true">
    <DynamicScopeRef>
      <Reference class="sailpoint.object.DynamicScope" name="Help Desk" />
    </DynamicScopeRef>
  </QuickLinkOptions>
</QuickLink>

</sailpoint>